#include <stdio.h>
#include <string.h>

void reverseString(char *str) {
    char *begin, *end, temp;
    int len = strlen(str);
    begin = str;
    end = str;

    for (int i = 0; i < len - 1; i++)
        end++;

    for (int i = 0; i < len / 2; i++) {
        temp = *end;
        *end = *begin;
        *begin = temp;
        begin++;
        end--;
    }
}

int main() {
    char input[100];

    printf("Enter a string: ");
    fgets(input, sizeof(input), stdin);
    input[strcspn(input, "\n")] = 0;

    reverseString(input);

    printf("Reversed String: %s\n", input);

    return 0;
}
